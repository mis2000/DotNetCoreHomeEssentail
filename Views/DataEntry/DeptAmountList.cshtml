@model IEnumerable<MySqlBasicCore.Models.DeptAmountViewModel>

@{
    ViewData["Title"] = "Department Amount List";
}
@using Microsoft.Extensions.Options;
@inject IOptions<Appsettings> Settings

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h3>@ViewData["Title"]</h3>
                    <div class="ibox-tools">
                        <a asp-action="AddDeptAmount" class="btn btn-primary "><i class="fa fa-plus-circle"></i>&nbsp;&nbsp;Add</a>
                      
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="tbl">
                        <thead>
                            <tr>
                                <th>
                                    Department
                                </th>
                                <th>
                                   Amount
                                </th>
                                

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dept)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Amount)
                                    </td>
                                    
                                    <td>
                                        @Html.ActionLink("Edit", "EditDeptAmount", "DataEntry", new { id = item.deptamount_id }) |
                                        <a href="#" onclick="deleteDeptProjection('@item.deptamount_id')">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
        <link rel="stylesheet" href="~/lib/sweetalert/dist/sweetalert.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/dataTables/datatables.min.js"></script>
        <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ],

            });
        });

       function deleteDeptProjection(deptName,mm) {

            swal({
                title: "Are you sure?",
                type: "warning",
                showCancelButton: true,
                cancelButtonText: "No",
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Yes",
                closeOnConfirm: false
            },
                function (isConfirm) {
                    if (!isConfirm)
                        return;

                      $.ajax({
                    url: "/DataEntry/DeleteDeptAmount",
                    type: "POST",
                    dataType: "json",
                    data: { DeptName: deptName, mm:mm },
                    success: function (data) {
                        if (data.Status=="1") {
                            swal(data.Message, "", "success")
                            window.location.href = "@Settings.Value.WebBaseURL/DataEntry/DeptAmountList";
                        }
                        else {
                              swal(data.Message, "", "error")
                        }
                    }
                })

                });

        }

    </script>
}